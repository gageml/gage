{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "problemMatcher": {
    "owner": "gage",
    "fileLocation": "absolute",
    "pattern": {
      "regexp": "^File \"(.*)\", line (\\d+)",
      "file": 1,
      "line": 2
    }
  },
  "presentation": {
    "revealProblems": "onProblem",
    "showReuseMessage": false,
    "clear": true,
    "focus": false
  },
  "tasks": [
    {
      "label": "Run All Tests",
      "type": "process",
      "command": "${command:python.interpreterPath}",
      "args": ["-m", "groktest", ".", "--fail-fast", "--show-skipped"],
      "presentation": {
        "panel": "dedicated",
      }
    },
    {
      "label": "Run Current",
      "type": "process",
      "command": "${command:python.interpreterPath}",
      "args": ["-m", "groktest", "${relativeFile}"]
    },
    {
      "label": "Run Current (fail fast)",
      "type": "process",
      "command": "${command:python.interpreterPath}",
      "args": ["-m", "groktest", "${relativeFile}", "--fail-fast"]
    },
    {
      "label": "Run Last",
      "type": "process",
      "command": "${command:python.interpreterPath}",
      "args": ["-m", "groktest", "--last"]
    },
    {
      "label": "Run Last (fail fast)",
      "type": "process",
      "command": "${command:python.interpreterPath}",
      "args": ["-m", "groktest", "--last", "--fail-fast"]
    }
  ]
}
